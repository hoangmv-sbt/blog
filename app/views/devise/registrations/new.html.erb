<div class="container signup">
  <div class="row">
    <div class="col-md-6 offset-md-3 login-form p-3">
      <h2 class="mt-3">Sign up</h2>
      <%= form_for(resource, as: resource_name, url: user_registration_path) do |f| %>
        <div class="field form-group mt-2">
          <%= f.label :name %>
          <%= f.text_field :name, autofocus: true, autocomplete: "name", class:"form-control" %>
        </div>

        <div class="field form-group mt-2">
          <%= f.label :email %>
          <%= f.email_field :email, autocomplete: "email", class:"form-control" %>
        </div>

        <div class="field form-group mt-2">
          <div>
            <%= f.label :birthday %>
          </div>
          <div>
            <%= f.date_field :birthday, class: 'form-control' %>
          </div>
        </div>

        <div class="field form-group mt-2">
          <%= f.label :address %>
          <%= f.text_field :address, class: 'form-control' %>
        </div>

        <div class="field form-group mt-2">
          <%= f.label :password %>
          <%= f.password_field :password, autocomplete: "new-password", class:"form-control"%>
            <% if resource.errors[:password].any? %>
              <div class="alert alert-danger mt-1 p-1 small">
                <ul class="mb-0">
                  <% resource.errors[:password].each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
            <% end %>
        </div>

        <div class="field mt-2">
          <%= f.label :password_confirmation %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control" %>
          <% if resource.errors[:password_confirmation].any? %>
            <div class="alert alert-danger mt-1 p-1 small">
              <ul class="mb-0">
                <% resource.errors[:password_confirmation].each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          <% end %>
        </div>

        <div class="actions d-grid">
          <%= f.submit "Sign up", class: "btn btn-block btn-primary mt-2" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>